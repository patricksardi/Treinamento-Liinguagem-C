#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main()
{

    char login[20], senha[20];

    while (1)
    {
        printf("Login: ");
        scanf("%s", login);
        printf("Senha: ");
        scanf("%s", senha);

        if (strcmp(login, "admin") == 0 && strcmp(senha, "1234") == 0)
        {
            printf("Acesso permitido.\n");
            break;
        }
        else
        {
            printf("Login ou senha incorretos. Tente novamente.\n");
        }
    }

    return 0;
}
